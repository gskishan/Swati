 "font_size": 14,
 "html": "<style>\n    body {\n        font-family: Arial, sans-serif;\n        font-size: 11px;\n        color: #000;\n    }\n\n    /* ===== COMMON ===== */\n    table {\n        width: 100%;\n        border-collapse: collapse;\n    }\n\n    .right {\n        text-align: right;\n    }\n\n    .center {\n        text-align: center;\n    }\n\n    .no-border td {\n        border: none;\n        vertical-align: top;\n        padding: 3px 6px;\n    }\n\n    /* ===== HEADER ===== */\n    .header-container {\n        display: flex;\n        justify-content: space-between;\n        align-items: flex-start;\n        margin-bottom: 10px;\n    }\n\n    .logo-left img {\n        width: 100px;\n        height: auto;\n    }\n\n    .company-text {\n        text-align: right;\n        font-size: 11px;\n        line-height: 1.3;\n    }\n\n    .title {\n        font-size: 20px;\n        font-weight: bold;\n        text-align: center;\n        margin: 5px 0;\n    }\n\n    .doc-no {\n        font-size: 11px;\n        color: #555;\n        text-align: center;\n        margin-bottom: 8px;\n    }\n\n    /* ===== FIELD ROW ===== */\n    .field-row {\n        display: flex;\n        gap: 6px;\n    }\n\n    .field-label {\n        font-weight: bold;\n        min-width: 160px;\n    }\n\n    .field-value {\n        flex: 1;\n    }\n\n    /* ===== ITEM TABLE ===== */\n    .item-table th,\n    .item-table td {\n        border: 1px solid #ccc;\n        padding: 5px;\n        vertical-align: top;\n    }\n\n    .item-table th {\n        background: #f2f2f2;\n        font-weight: bold;\n        text-align: center;\n    }\n\n    /* ===== SUMMARY ===== */\n    .summary td {\n        padding: 4px 6px;\n    }\n\n    .summary .grand td {\n    font-weight: bold;\n    border-top: none;\n}\n</style>\n\n<!-- ================= HEADER ================= -->\n<div class=\"header-container\">\n    <div class=\"logo-left\">\n        <img src=\"{{ '/files/Logo.png' | abs_url }}\" alt=\"Company Logo\">\n    </div>\n\n    <div class=\"company-text\">\n        <b>Swati Airport Support Services Pvt Ltd</b><br>\n        Regd. Office: Unit No: 302, 3rd Floor, Block B,<br>\n        Asian Sun City, Kothaguda,<br>\n        Hyderabad 500084, Telangana<br>\n        Tele-Fax: 040-45048332<br>\n        support@sasgroups.com<br>\n        www.sasgroups.com<br>\n        <b>GSTIN:</b> 36AARCS2870G1ZY<br>\n        <b>CIN:</b> U29100TG2012PTC079956\n    </div>\n</div>\n\n<div class=\"title\">Purchase Order</div>\n<div class=\"doc-no\">{{ doc.name }}</div>\n\n<hr>\n\n<!-- ================= PARTY DETAILS ================= -->\n<table class=\"no-border\" style=\"table-layout: fixed;\">\n    <tr>\n        <td width=\"50%\">\n            <div class=\"field-row\">\n                <div class=\"field-label\">Supplier Name:</div>\n                <div class=\"field-value\">{{ doc.supplier_name }}</div>\n            </div>\n\n            <br>\n\n            <div class=\"field-row\">\n                <div class=\"field-label\">Supplier Address Details:</div>\n                <div class=\"field-value\">\n                    {{ doc.supplier_address_display or \"\" }}\n                </div>\n            </div>\n        </td>\n\n        <td width=\"50%\">\n            <div class=\"field-row\">\n                <div class=\"field-label\">Date:</div>\n                <div class=\"field-value\">{{ doc.transaction_date }}</div>\n            </div>\n\n            <br>\n\n            <div class=\"field-row\">\n                <div class=\"field-label\">Required By:</div>\n                <div class=\"field-value\">{{ doc.schedule_date }}</div>\n            </div>\n\n            <br>\n\n            <div class=\"field-row\">\n                <div class=\"field-label\">Billing Address Details:</div>\n                <div class=\"field-value\">\n                    {{ doc.billing_address_display or \"\" }}\n                </div>\n            </div>\n\n            <br>\n\n            <div class=\"field-row\">\n                <div class=\"field-label\">Shipping Address Details:</div>\n                <div class=\"field-value\">\n                    {{ doc.shipping_address_display or \"\" }}\n                </div>\n            </div>\n        </td>\n    </tr>\n</table>\n\n<br>\n\n<!-- ================= ITEM TABLE ================= -->\n<table class=\"item-table\">\n    <thead>\n        <tr>\n            <th width=\"4%\">Sr</th>\n            <th width=\"15%\">Item Code</th>\n            <th>Description</th>\n            <th width=\"8%\">Qty</th>\n            <th width=\"10%\">Rate</th>\n            <th width=\"12%\">Amount</th>\n        </tr>\n    </thead>\n    <tbody>\n        {% for item in doc.items %}\n        <tr>\n            <td class=\"center\">{{ loop.index }}</td>\n            <td>{{ item.item_code }}</td>\n            <td>\n                <b>{{ item.item_name }}</b><br>\n                {{ item.description }}\n            </td>\n            <td class=\"right\">{{ item.qty }}</td>\n            <td class=\"right\">\n                {{ frappe.utils.fmt_money(item.rate, currency=doc.currency) }}\n            </td>\n            <td class=\"right\">\n                {{ frappe.utils.fmt_money(item.amount, currency=doc.currency) }}\n            </td>\n        </tr>\n        {% endfor %}\n    </tbody>\n</table>\n\n<br>\n\n<!-- ================= TOTALS ================= -->\n<table class=\"no-border summary\">\n    <tr>\n        <td width=\"60%\">\n            <b>Tax Category:</b> {{ doc.tax_category or \"\" }}\n        </td>\n        <td width=\"25%\" class=\"right\">Total</td>\n        <td width=\"15%\" class=\"right\">\n            {{ frappe.utils.fmt_money(doc.total, currency=doc.currency) }}\n        </td>\n    </tr>\n\n    {% for tax in doc.taxes %}\n    <tr>\n        <td></td>\n        <td class=\"right\">{{ tax.description }}</td>\n        <td class=\"right\">\n            {{ frappe.utils.fmt_money(tax.tax_amount, currency=doc.currency) }}\n        </td>\n    </tr>\n    {% endfor %}\n\n    <tr class=\"grand\">\n        <td></td>\n        <td class=\"right\">Grand Total</td>\n        <td class=\"right\">\n            {{ frappe.utils.fmt_money(doc.grand_total, currency=doc.currency) }}\n        </td>\n    </tr>\n\n    <tr>\n        <td></td>\n        <td class=\"right\">Rounded Total</td>\n        <td class=\"right\">\n            {{ frappe.utils.fmt_money(doc.rounded_total or doc.grand_total, currency=doc.currency) }}\n        </td>\n    </tr>\n\n    <tr>\n        <td colspan=\"3\" class=\"right\">\n            <b>In Words:</b> {{ doc.in_words }}\n        </td>\n    </tr>\n</table>\n\n<br><br>\n\n<!-- ================= TERMS ================= -->\n<b>Purchase Order Terms & Conditions:</b><br>\n{{ doc.terms or \"\" }}\n",
